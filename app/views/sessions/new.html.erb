<h1>Sign In!!</h1>

<div class="row">
    <%= form_for(:session, url: login_path) do |f| %>
    
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    
    <div class="actions">
      <%= f.submit "Log In" %>
    </div>
    <% end %>
</div>
<br>
<br>
<p>Not a user of this great app yet? <%= link_to "TO DO it", signup_path %></p>